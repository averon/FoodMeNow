<h3 class="header">Your Order</h3>

<div class="order-items">
</div>

<div class="row checkout-summary">
  <div class="col-md-8">
    <div class="checkout-info">Subtotal</div>
    <div class="checkout-info">Tax and Gratuity</div>
    <div class="checkout-info">Delivery</div>
  </div>
  <div class="col-md-4">
    <div class="order-subtotal">
      <% var subtotal = order.escape('subtotal') %>
      $<%= subtotal.slice(0, subtotal.length - 2) + '.' + subtotal.slice(subtotal.length - 2) %>
    </div>
    <div class="order-tax-and-gratuity">
      <% var taxAndGratuity = parseInt(order.escape('tax')) + parseInt(order.escape('tip')).toString() %>
      $<%= taxAndGratuity.slice(0, taxAndGratuity.length - 2) + '.' + taxAndGratuity.slice(taxAndGratuity.length - 2) %>
    </div>
    <div class="order-delivery">Free</div>
  </div>
</div>

<div class="row checkout-total">
  <div class="col-md-8">
    <div class="checkout-info"><h3>Total</h3></div>
  </div>

  <div class="col-md-4">
    <div class="order-total"><h3>$<%= order.escape('total') %></h3></div>
  </div>
</div>

